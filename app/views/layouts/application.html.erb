<!DOCTYPE html>
<html>
<head>
  <title>Leedgood</title>

  	<!-- start: Mobile Specific -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- end: Mobile Specific -->
  <%= stylesheet_link_tag    'application', media: 'screen', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->


</head>
<body>

<body>
	<div class="mainwrapper container">
		<!--start: Container -->
		<div class="container" id="logcontainer">
			
			<!--start: Row -->
			<div class="row">
					
				<!--start: Logo -->
				<div class="logo span4">
						
					<%= link_to image_tag("logo.jpg"), controller: 'welcome' %>
						
				</div>
				<!--end: Logo -->
					
				<!--start: Navigation -->
				<div class="span8">
					
					<div class="navbar navbar-inverse">
			    		<div class="navbar-inner">
			          		<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
			            		<span class="icon-bar"></span>
			            		<span class="icon-bar"></span>
			            		<span class="icon-bar"></span>
			          		</a>
			          		<div class="nav-collapse collapse" data-no-turbolink>
			            		<ul class="nav" >
			              			<li class="<%= is_controller?('welcome') %>"><%= link_to 'Home', controller: 'welcome' %></li>
			              			<li class="dropdown <%= is_some_controller %>">
			              				<a href="#" class="dropdown-toggle" data-toggle="dropdown">Projects</a>
			              				<ul class="dropdown-menu">
			              					<li><%= link_to 'Land', land_path %></li>
			              					<li><%= link_to 'Home Land Package', homelandpack_path %></li>
			            		            <li><%= link_to 'Brand New Home', brandnewhome_path %></li>  				
			              				</ul>

			              			</li>
									<li class="<%= is_controller?('services') %>"><%= link_to 'Services', services_path%></li>
									<li class="<%= is_active?(contact_path) %>"><%= link_to 'Contact', contact_path%></li>

			              			<li class="<%= is_active?(aboutus_path) %>"><%= link_to 'About Us', aboutus_path%></li>
			              			
			              			<li class="<%= is_active?(chinese_path) %>"><%= link_to '中文服务', chinese_path%></li>
			            		</ul>
			          		</div>
			        	</div>
			      	</div>
					
				</div>	
				<!--end: Navigation -->
					
			</div>
			<!--end: Row -->
			
		</div>
		<!--end: Container-->
			<%= yield%>
		

	<!-- start: Copyright -->
	<div id="copyright" class="container">
	
		<!-- start: Container -->
		<div class="container">
		
			<p>
				&copy; 2014, Leed Goodrich Land Development PTY. LTD. 
			</p>
	
		</div>
		<!-- end: Container  -->
		
	</div>	
	<!-- end: Copyright -->
</div>
</body>


  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

</html>
