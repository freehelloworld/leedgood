<%= form_for @project, :html => { :class => 'form-horizontal' } do |f| %>
  
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
        <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field' %>
    </div>
  </div>



  <div class="control-group">
    <%= f.label :url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :url, :class => 'text_field' %>
    </div>
  </div>

 <div class="control-group">
    <%= f.label :address, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :address, :class => 'text_field' %>
    </div>
  </div>

   <div class="control-group">
    <%= f.label :allotmentplan, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :allotmentplan, :class => 'text_field' %>
    </div>
  </div>

   <div class="control-group">
    <%= f.label :isonhome, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :isonhome, :class => 'text_field' %>
    </div>
  </div>

 <div class="control-group">
    <%= f.label :projecttype_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :projecttype_id, :class => 'text_field' %>
    </div>
  </div>


  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                projects_path, :class => 'btn' %>
  </div>
<% end %>
