<%- model_class = Homeland -%>
<div class="page-header">
  <h1>  <%= link_to "Projects >", projects_path%><%=session[:projectname] %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th>Description</th>
      <th><%= model_class.human_attribute_name(:frontimg) %>(700*300)</th>
      <th><%= model_class.human_attribute_name(:structimg) %>(300*all)</th>
      <th><%= model_class.human_attribute_name(:lot) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:size) %></th>
      <th><%= model_class.human_attribute_name(:bedroom) %></th>
      <th><%= model_class.human_attribute_name(:bathroom) %></th>
      <th><%= model_class.human_attribute_name(:garage) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:project_id) %></th>      
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @homelands.each do |homeland| %>
      <tr>
        <td><%= homeland.id %></td>
        <td><%= homeland.name %></td>
        <td><%= truncate(homeland.packagedes, length: 50) %></td>
        <td><%= homeland.frontimg_identifier %></td>
        <td><%= homeland.structimg_identifier %></td>
        <td><%= homeland.lot %></td>
        <td><%= homeland.address %></td>
        <td><%= homeland.size.to_i %></td>
        <td><%= homeland.bedroom %></td>
        <td><%= homeland.bathroom %></td>
        <td><%= homeland.garage %></td>
        <td><%= homeland.price.to_i %></td>
        <td><%= homeland.status %></td>
        <td><%= homeland.project_id %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_homeland_path(homeland), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      homeland_path(homeland),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_homeland_path,
            :class => 'btn btn-primary' %>
