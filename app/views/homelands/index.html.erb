<%- model_class = Homeland -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:packagedes) %></th>
      <th><%= model_class.human_attribute_name(:frontimg) %></th>
      <th><%= model_class.human_attribute_name(:structimg) %></th>
      <th><%= model_class.human_attribute_name(:lot) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:size) %></th>
      <th><%= model_class.human_attribute_name(:bedroom) %></th>
      <th><%= model_class.human_attribute_name(:bathroom) %></th>
      <th><%= model_class.human_attribute_name(:garage) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:project_id) %></th>      
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @homelands.each do |homeland| %>
      <tr>
        <td><%= link_to homeland.id, homeland_path(homeland) %></td>
        <td><%= homeland.name %></td>
        <td><%= homeland.packagedes %></td>
        <td><%= homeland.frontimg %></td>
        <td><%= homeland.structimg %></td>
        <td><%= homeland.lot %></td>
        <td><%= homeland.address %></td>
        <td><%= homeland.size %></td>
        <td><%= homeland.bedroom %></td>
        <td><%= homeland.bathroom %></td>
        <td><%= homeland.garage %></td>
        <td><%= homeland.price %></td>
        <td><%= homeland.status %></td>
        <td><%= homeland.project_id %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_homeland_path(homeland), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      homeland_path(homeland),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_homeland_path,
            :class => 'btn btn-primary' %>
